

function confirmTrans() {
  document.getElementById("transaction-<%= @transaction.id %>").classList.add('confirmed')
  document.getElementById("row-selector-<%= @transaction.id %>").classList.remove('display')

  if (document.querySelectorAll('.confirmed').length === document.querySelectorAll('.category-selector-div').length) {
    document.getElementById('empty-inbox-image').classList.remove('d-none')
    document.querySelector('.inbox-container').classList.add('d-none')
  }

}

confirmTrans();
