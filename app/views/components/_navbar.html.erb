<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
  <% unless action_name == "home" %>
    <%= image_tag "https://res.cloudinary.com/lightglance/image/upload/v1569848358/yield-resources/logo-v1_kpyze4.png" %>
    <% end %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
          <%= active_link_to "Inbox", inbox_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
          <%= active_link_to "Budget", categories_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
          <%= active_link_to "Transactions", transactions_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
          <%= active_link_to "Overview", dashboard_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
          <%= link_to "Demo Mode", "#", class: "form-buttons btn" %>
      </li>
      <li class="nav-item dropdown">
        <% if user_signed_in? %>
          <% if User.first.photo.present? %>
            <%= cl_image_tag User.first.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
          <div class ="initials dropdown-toggle", id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= User.first.first_name[0] %>
            <%= User.first.last_name[0] %>
          </div>
          <%end %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
          <%= link_to "Settings", profile_path, class: "dropdown-item" %>
          <%= link_to "Categorize", categorize_path, class: "dropdown-item" %>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
