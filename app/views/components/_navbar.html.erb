<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "https://res.cloudinary.com/lightglance/image/upload/v1569848358/yield-resources/logo-v1_kpyze4.png" %>


  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <% if user_signed_in? %>
        <%= link_to "Inbox", root_path, class: "nav-link" %>
        <% else %>
        <%= link_to "Learn more", root_path, class: "nav-link" %>
         <% end %>
      </li>
      <li class="nav-item">
        <% if user_signed_in? %>
        <%= link_to "Budget", root_path, class: "nav-link" %>
        <% else %>
        <%= link_to "Help", root_path, class: "nav-link" %>
        <% end %>
      </li>
      <li class="nav-item">
        <% if user_signed_in? %>
        <%= link_to "Overview", root_path, class: "nav-link" %>
        <% else %>
        <%= link_to "Log in", root_path, class: "nav-link" %>
         <% end %>
      </li>
      <li class="nav-item">
        <% if user_signed_in? %>
        <%= link_to "Transactions", root_path, class: "nav-link" %>
       <% else %>
        <%= link_to "Sign up", new_user_session_path, class: "nav-link" %>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <% if user_signed_in? %>
          <% if current_user.photo.present? %>
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
          <div class ="initials dropdown-toggle", id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_user.first_name[0] %>
            <%= current_user.last_name[0] %>
          </div>
          <%end %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
          <%= link_to "Show Profile", root_path, class: "dropdown-item" %>
          <%= link_to "Sign out", destroy_user_session_path(current_user), method: "delete", class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
